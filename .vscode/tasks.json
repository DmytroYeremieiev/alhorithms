{
  // See https://go.microsoft.com/fwlink/?LinkId=733558
  // for the documentation about the tasks.json format
  "version": "2.0.0",
  "tasks": [
    {
      "type": "typescript",
      "label": "build",
      "tsconfig": "tsconfig.json",
      "problemMatcher": [
        "$tsc"
      ],
      "group": {
        "kind": "build",
        "isDefault": true
      }
    },
    {
      "type": "typescript",
      "tsconfig": "tsconfig.json",
      "label": "watch",
      "option": "watch",
      "group": "build",
      "problemMatcher": [
        "$tsc-watch"
      ]
    },
    {
      "type": "process",
      "label": "Mocha watch ${file}",
      "command": "${workspaceFolder}/node_modules/mocha/bin/_mocha",
      "args": [
        "--require",
        "ts-node/register",
        // "-u",
        // "tdd",
        // "--timeout",
        // "999999",
        "--colors",
        "--recursive",
        "--watch-extensions",
        "ts",
        "--watch",
        "${file}"
      ]
    },
    {
      "type": "process",
      "label": "Mocha Run tests",
      "command": "${workspaceFolder}/node_modules/mocha/bin/_mocha",
      "args": [
        "--require",
        "ts-node/register",
        "-u",
        "tdd",
        "--timeout",
        "999999",
        "--colors",
        "--recursive",
        "${workspaceFolder}/tests/**/*.ts"
      ]
    },
    {
      "label": "npm run tests ${file}",
      "command": "npm",
      "args": [
        "run",
        "test",
        "--",
        "${file}"
      ]
    },
    {
      "label": "npm watch tests ${file}",
      "command": "npm",
      "args": [
        "run",
        "watch:test",
        "--",
        "${file}"
      ]
    }
  ]
}