  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Launch Program",
      "program": "${workspaceFolder}/JS/noname-tasks.ts",
      "outFiles": [
        "${workspaceFolder}/**/*.js"
      ]
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Mocha ${workspaceFolder}/tests ..",
      "program": "${workspaceFolder}/node_modules/mocha/bin/_mocha",
      "args": [
          "--timeout",
          "999999",
          "--colors",
          "${workspaceFolder}/JS/tests"
      ],
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen"
  },
  {
      "type": "node",
      "request": "launch",
      "name": "Mocha ${file}",
      "program": "${workspaceFolder}/node_modules/mocha/bin/_mocha",
      "args": [
          "--timeout",
          "999999",
          "--colors",
          "${file}"
      ],
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen"
  }
  ]
}