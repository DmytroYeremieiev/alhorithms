{
  "name": "typescript-tests-and-playground",
  "version": "1.0.0",
  "description": "testing and educational  project ",
  "scripts": {
    "build": "tsc --pretty",
    "watch": "npm run build -- --watch",
    "test": "mocha --require ts-node/register",
    "watch:test": "npm run test -- --watch-extensions ts --watch",
    "lint": "eslint -c .eslintrc.js --ignore-pattern '**/build/*'",
    "lint:all": "yarn lint -- '**/*.{ts,tsx}'",
    "lint:all:fix": "yarn lint:all -- --fix"
  },
  "author": "DmitryYeremieiev",
  "license": "ISC",
  "devDependencies": {
    "@swc/cli": "^0.1.46",
    "@swc/core": "^1.2.63",
    "@types/chai": "^4.2.19",
    "@types/mocha": "^5.2.7",
    "@typescript-eslint/eslint-plugin": "^2.34.0",
    "@typescript-eslint/parser": "^2.34.0",
    "chai": "^4.3.4",
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.15.0",
    "eslint-plugin-prettier": "^3.4.0",
    "mocha": "^5.2.0",
    "prettier": "^1.19.1",
    "prettier-conf": "^1.0.5",
    "ts-node": "^10.0.0",
    "tsconfig-paths": "^3.9.0",
    "typescript": "^4.3.4"
  }
}
